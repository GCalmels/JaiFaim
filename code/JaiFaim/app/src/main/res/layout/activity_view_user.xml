<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tse.ihm.jaifaim.ui.ViewUserActivity">

    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        app:hasIcons="true"
        app:primaryColor="@android:color/holo_green_light"
        app:accentColor="#FFF" />


    <TextView
        android:id="@+id/user_activity_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabHost"
        android:gravity="center"
        android:textSize="30sp"
        android:maxLines="1"
        android:hint="UserName"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/user_activity_my_recipe_list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_activity_username"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Mes recettes"/>

    <ListView
        android:id="@+id/user_activity_my_recipe_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_activity_my_recipe_list_description"
        android:layout_marginTop="20dp">
    </ListView>


</RelativeLayout>

    </ScrollView>
